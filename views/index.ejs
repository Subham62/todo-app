<!-- EJS Partials concept  -->
<%- include("./partials/header") %>     

    <div class="relative overflow-x-auto ">
        <div class="mb-10 ">
            <h1 class="mb-4 text-2xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-2xl dark:text-white text-center mt-2">iTask - Manage your todos at one place</h1>
            <p class="mb-6 text-lg font-normal text-gray-500 lg:text-xl sm:px-16 xl:px-48 dark:text-gray-400">"Stay organized and on top of your tasks with our handy To-Do List! Easily add, prioritize, and check off items from your daily agenda, ensuring nothing slips through the cracks. Keep track of personal goals, work projects, or errands - all in one convenient place."</p>
            <a href="/addTodo" style="margin-left: 10.5vw" class=" inline-flex items-center justify-center px-5 py-3 text-base font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-900">
                Add a Todo
                <svg class="w-3.5 h-3.5 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
            </svg>
            </a>    
        </div>
        
        <div class=" sm:px-16 xl:px-40">
            <div class="relative inline-block text-left">
                <button id="buttonForShowingList" class="inline-flex justify-center w-full px-4 py-2 text-sm font-medium text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 dark:focus:ring-blue-900">
                    Hide Your Todos
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 ml-2 -mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>
            </div>
            
            <div class="dropdown-menu  ">
                <h1  class=" mb-4 text-2xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-2xl dark:text-white mt-2">Your Todos</h1>
                <table  class=" w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                <!-- <table>    -->
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-6 py-3">
                                Title
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Description
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Created at
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Updated at
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0 ; i<todos.length; i++) {    %>
                            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                        <%= todos[i].title %>
                                    </th>
                                    <!-- <td class="px-6 py-4">
                                        <%= todos[i].title %>
                                    </td> -->
                                    <td class="px-6 py-4">
                                        <%= todos[i].desc %>
                                    </td>
                                    <td class="px-6 py-4">
                                        <%= moment(todos[i].createdAt).format("MMM DD, YYYY, HH:mm:ss") %>
                                    </td>
                                    <td class="px-6 py-4">
                                        <%= moment(todos[i].updatedAt).format("MMM DD, YYYY, HH:mm:ss") %>
                                    </td>
                                    <td class="px-6 py-4">
                                        <!-- <a href="/updateTodo?id=<%= todos[i]._id %>" class="text-white bg-gradient-to-r from-cyan-400 via-cyan-500 to-cyan-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-cyan-300 dark:focus:ring-cyan-800 shadow-lg shadow-cyan-500/50 dark:shadow-lg dark:shadow-cyan-800/80 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">Edit</a>
                                        <a href="/deleteTodo?id=<%= todos[i]._id %>" class="text-white bg-gradient-to-r from-cyan-400 via-cyan-500 to-cyan-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-cyan-300 dark:focus:ring-cyan-800 shadow-lg shadow-cyan-500/50 dark:shadow-lg dark:shadow-cyan-800/80 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">Delete</a> -->
                                        <a href="/updateTodo?id=<%= todos[i]._id %>" class="text-white bg-gradient-to-r from-cyan-400 via-cyan-500 to-cyan-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-cyan-300 dark:focus:ring-cyan-800 shadow-lg shadow-cyan-500/50 dark:shadow-lg dark:shadow-cyan-800/80 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">Edit</a>
                                        <a href="/deleteTodo?id=<%= todos[i]._id %>" class="text-white bg-gradient-to-r from-cyan-400 via-cyan-500 to-cyan-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-cyan-300 dark:focus:ring-cyan-800 shadow-lg shadow-cyan-500/50 dark:shadow-lg dark:shadow-cyan-800/80 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">Delete</a>
                                    </td>    
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            
        </div>
    </div>

    <script>
        // Toggle the dropdown menu on button click
        const dropdownButton = document.querySelector('button');
        const dropdownMenu = document.querySelector('.dropdown-menu');
        const x = document.getElementById("buttonForShowingList");
        
        dropdownButton.addEventListener('click', () => {
          dropdownMenu.classList.toggle('hidden');
          if (x.innerHTML === "See All Your Todos Here"){
            x.innerHTML = "Hide Your Todos ";
          }else{
            x.innerHTML = "See All Your Todos Here";
          }
        });
      </script>

<%- include("./partials/footer") %>